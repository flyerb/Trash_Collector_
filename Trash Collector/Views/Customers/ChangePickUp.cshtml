@model Trash_Collector.Models.Customer

@{
    ViewData["Title"] = "ChangePickUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ChangePickUp</h1>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangePickUp">
      
            <div class="form-group">
                <label asp-for="weeklyPickupDay" class="control-label"></label>
                <input asp-for="weeklyPickupDay" class="form-control" />
                <span asp-validation-for="weeklyPickupDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="extraPickup" class="control-label"></label>
                <input asp-for="extraPickup" class="form-control" />
                <span asp-validation-for="extraPickup" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="suspendPickupStart" class="control-label"></label>
                <input asp-for="suspendPickupStart" class="form-control" />
                <span asp-validation-for="suspendPickupStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="suspendPickupEnd" class="control-label"></label>
                <input asp-for="suspendPickupEnd" class="form-control" />
                <span asp-validation-for="suspendPickupEnd" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
